{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:sztosy/backend.git"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/main.ts",
    "start": "node dist/main.js",
    "prod": "npm run build && npm run start",
    "lint": "tslint src/*",
    "test": "mocha --recursive --require ts-node/register \"src/tests/**/*.spec.ts\"",
    "test:cover": "nyc npm run test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "connect-mongo": "^2.0.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.4.0",
    "jwt-simple": "^0.5.5",
    "memory-cache": "^0.2.0",
    "mongoose": "^5.4.2",
    "nodemon": "^1.18.9",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "response-time": "^2.3.2",
    "spdy": "^4.0.0",
    "swagger-jsdoc": "^3.2.6",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.3.7",
    "@types/node": "^10.12.18",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/sinon": "^7.0.3",
    "@types/supertest": "^2.0.7",
    "@types/swagger-jsdoc": "0.0.2",
    "chai": "^4.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.2.2",
    "source-map-support": "^0.5.9",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "nodemonConfig": {
    "watch": [
      "/src/*"
    ],
    "ext": "ts yaml json",
    "ignore": [],
    "delay": "3",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "sourceMap": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "coverage/**/*",
      "src/tests/**/*"
    ],
    "all": true
  }
}
